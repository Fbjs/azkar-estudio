---
import { SITE } from 'astrowind:config';
import Logo from '~/assets/images/logo.png';

// Global declaration for gsap animation library
declare global {
  interface Window {
    gsap: any;
  }
}

---


<span  class="flex self-center justify-center items-center ml-2 rtl:ml-0 rtl:mr-2 text-2xl md:text-xl font-bold  whitespace-nowrap text-[var(--aw-color-text-heading)] dark:text-[var(--aw-color-text-heading)]">
  <img id="fadeInMoveRight" src={Logo?.src} alt="Logo Neighbour" class="w-16">
  <div id="fadeInMoveRight">
    <div class="text-xl font-bold font-script">{SITE?.name}</div>
    <div class="text-md font-extralight font-script">{SITE?.leyend}</div>
  </div>  
</span>
